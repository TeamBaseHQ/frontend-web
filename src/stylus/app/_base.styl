html,
body
  min-height: 100%;

.no-background
  background: none !important;

for num in (1..10)
  .opacity-{num}
    $o = floor(num / 10, 2)
    opacity: $o

.account-settings-tabs
  .account-settings-bar
    background: $brand-light-grey;
    &.is-dark
      background: lighten($brand-secondary, 20%);

.list--four-line
  .list__tile
    height: 100%;

.login-box
  max-width: 400px;
  width: 100%;
  margin: auto;

.thread-list
  .thread-list-item
    border-bottom: solid 1px rgba(0, 0, 0, 0.2);
    &:last-child
      border-bottom: none;
